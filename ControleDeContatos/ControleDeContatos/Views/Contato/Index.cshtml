@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de Contatos";
}

<div class="text-center">

    <div class="d-grid-gep-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary text-left" role="button" asp-controller="Contato" asp-action="Criar">Adicionar novo Contato</a>
    </div>
    <br/>

    @if(TempData["MensagemSucesso"] != null)
    {
         <div class="alert alert-success" role="alert">
           <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
           @TempData["MensagemSucesso"]
        </div>   
    }

    @if(TempData["MensagemErro"] != null)
    {
         <div class="alert alert-success" role="alert">
           <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
           @TempData["MensagemErro"]
        </div>   
    }

    <br/>

    <h1 class="display-4">Listagem de Contatos</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">E-mail</th>
      <th scope="col">Celular</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
      @if(Model != null && Model.Any())
      {
          foreach(ContatoModel contato in Model)
          {
                <tr>
                  <td scope="row">@contato.Id</td>
                  <td>@contato.Nome</td>
                  <td>@contato.Email</td>
                  <td>@contato.Celular</td>
                  <td class="btn-group" role="group">
                      <a role="button" asp-route-id="@contato.Id" class="btn btn-primary" asp-controller="Contato" asp-action="Editar">Editar</a>
                      <a role="button" asp-route-id="@contato.Id" class="btn btn-danger" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                  </td>
                </tr>    
          }
      }
  </tbody>
</table>
</div>

